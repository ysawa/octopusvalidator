%meta(charset="utf-8")
%meta(name="viewport" content="width=device-width, user-scalable=no")
- if content_for?(:title)
  - title = "#{yield(:title)} | Octopus Validator"
- else
  - title = 'Octopus Validator'
%title= title
- description = t('site.description')
%meta{ content: description, name: "description" }
- keywords = 'W3C,Validation,HTML,CSS,HTML5,Rails,Twitter Bootstrap'
%meta{ content: keywords, name: "keywords" }
= csrf_meta_tags
/ Le HTML5 shim, for IE6-8 support of HTML elements
/[if lt IE 9]
  = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
= stylesheet_link_tag "application", media: "all"
%link{ href: asset_path("apple-touch-icon-144x144.png"), rel: "apple-touch-icon-precomposed", sizes: "144x144" }
%link{ href: asset_path("apple-touch-icon-114x114.png"), rel: "apple-touch-icon-precomposed", sizes: "114x114" }
%link{ href: asset_path("apple-touch-icon-72x72.png"), rel: "apple-touch-icon-precomposed", sizes: "72x72" }
%link{ href: asset_path("apple-touch-icon-57x57.png"), rel: "apple-touch-icon-precomposed", sizes:"54x54" }
%link{ href: asset_path("favicon.ico"), rel:"shortcut icon" }
%meta{ content: title, property: "og:title" }
%meta{ content: description, property: "og:description" }
- facebook_image = "#{request.protocol}#{request.host_with_port}#{asset_path("facebook-icon.png")}"
%meta{ content: facebook_image, property: "og:image" }
- here_params = params.dup
- here_params.delete('utf8')
- here_params.delete('commit')
- here_params[:only_path] = false
%meta{ content: url_for(here_params), property: "og:url" }
%meta{ content: 'website', property: "og:type" }
