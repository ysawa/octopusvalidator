= form_for @validator, html: { class: %w(form-horizontal)} do |f|
  - if @validator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@validator.errors.count, "error")} prohibited this validator from being saved:"
      %ul
        - @validator.errors.full_messages.each do |msg|
          %li= msg

  .control-group.field
    = f.label :name, nil, class: %w(control-label)
    .controls
      = f.text_field :name, class: %w(input-block-level)
  .control-group.field
    = f.label :format, nil, class: %w(control-label)
    .controls
      = f.text_field :format, class: %w(input-block-level)
  .control-group.field
    = f.label :content, nil, class: %w(control-label)
    .controls
      = f.text_area :content, class: %w(input-block-level)
  .form-actions
    = f.submit 'Save', class: %w(btn btn-primary)
    = link_to 'Back', validators_path, class: %w(btn)
